source 'https://rubygems.org'

gem 'rails', '3.2.13'

gem 'pg'

group :assets do
  gem 'sass-rails',   '~> 3.2.3'
  gem 'coffee-rails', '~> 3.2.1'
  gem 'uglifier', '>= 1.0.3'
end

gem 'jquery-rails'

group :development do
  # Database status
  gem 'rails-erd'
  
  # Schema to model auto header
  gem 'annotate', ">=2.5.0"

  # Rspec for internal tests
  gem 'rspec'
  gem 'rspec-rails'

  # Collection of testing matchers
  gem 'shoulda-matchers'

  #Automation tests
  gem 'capybara'
  gem 'guard-rspec'

  # Simple editor for line
  gem 'coolline'
  gem 'pry-coolline'
  gem 'pry'
  gem 'pry-doc'
  gem 'pry-rails'
end

